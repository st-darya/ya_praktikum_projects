    "def income_id(income): \n",
    "    if income <= 107623: \n",
    "        return 'низкий'\n",
    "    if income > 107623 and income <= 142594: \n",
    "        return 'средний'\n",
    "    if income > 142594 and income <= 226560:\n",
    "        return 'высокий'\n",
    "    return 'очень высокий'\n",
    "\n",
    "data['income_id'] = data['total_income'].apply(income_id)\n",
    "\n",
    "income_id(150000)"
   ]
